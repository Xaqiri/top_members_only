extends layout

block content
  div.message_board
    h1= title
    if (currentUser)
      p Welcome back, #{currentUser.username}
    else 
      p Welcome to the message board
    each message in message_list
      div.message 
        h1=message.title 
        h2=message.body
        if (currentUser)
          div.message_footer 
            h3=message.user
            if (message.edited_timestamp)
              h3 Edited at:  #{message.formatted_edit_timestamp}
            else 
              h3=message.formatted_timestamp
    

