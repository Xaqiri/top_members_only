extends layout

block content
  h1= title
  if (currentUser)
    p Welcome back, #{currentUser.username}
  else 
    p Welcome to the message board
  div.message_board
    each message in message_list
      div.message 
        h1=message.title 
        h2=message.body
        if (currentUser)
          h3=message.user
          h3=message.timestamp
    

